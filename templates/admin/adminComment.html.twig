{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Modifier le commentaire</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">


          {{ form_start(commentForm, {'method': 'POST', 'attr':{'id': 'search-form', 'name': 'commentForm', 'class': 'commentForm'}}) }}
          <div class="row">


           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(commentForm.textComments, {'label':'Message:', 'attr': {'class': 'commentText'}}) }}
              {{ form_row(commentForm.date, {'label':'Date:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(commentForm.idUser, {'label':'Utilisateur:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(commentForm.idBug, {'label':'Bug:', 'attr': {'class': 'inputBugForm'}}) }}
             </div>

            </fieldset>
           </div>

           <div class="col-lg-4"></div>
           <div class="col-lg-4"></div>
           <div class="col-lg-4">
            <button><input type="submit" name="submitBugButton"></button>
           </div>

          </div>
          {{ form_end(commentForm) }}


        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
{% endblock %}