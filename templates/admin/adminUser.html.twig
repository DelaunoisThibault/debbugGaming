{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Modifier un utilisateur</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">


          {{ form_start(userForm, {'method': 'POST', 'attr':{'id': 'search-form', 'name': 'commentForm', 'class': 'commentForm'}}) }}
          <div class="row">


           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(userForm.email, {'label':'Email:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(userForm.roles, {'label':'Rôle:', 'attr': {'class': 'searchFormPage inputBugForm'}}) }}
              {{ form_row(userForm.password, {'label':'Password:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(userForm.pseudonym, {'label':'Pseudonyme:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(userForm.avatar, {'label':'Avatar:', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(userForm.locked, {'label':'Bloqué :', 'attr': {'class': 'inputBugForm'}}) }}
              {{ form_row(userForm.isVerified, {'label':'Vérifié :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>

            </fieldset>
           </div>

           <div class="col-lg-4"></div>
           <div class="col-lg-4"></div>
           <div class="col-lg-4">
            <button><input type="submit" name="submitBugButton"></button>
           </div>

          </div>
          {{ form_end(userForm) }}


        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
{% endblock %}