{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Ajouter/modifier une Résolution de bug</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">

         {{ form_start(bugFixForm, {'method': 'POST', 'attr':{'id': 'search-form', 'name': 'sB'}}) }}
          <div class="row">

           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(bugFixForm.resolved, {'label':'Bug résolu :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(bugFixForm.majNumber, {'label':'Numéro de la mise à jour :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(bugFixForm.dateBugFix, {'label':'Date de la mise à jour:', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(bugFixForm.bugId, {'label':'Bug concerné :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
            </fieldset>
           </div>

           <div class="col-lg-4"></div>
           <div class="col-lg-4"></div>
           <div class="col-lg-4">
            <button><input type="submit" name="submitBugButton"></button>
           </div>

          </div>
         {{ form_end(bugFixForm) }}
        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
{% endblock %}