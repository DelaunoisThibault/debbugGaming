{% block content %}
<div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Hi! Please confirm your email!</h2>
      </div>
     </div>
