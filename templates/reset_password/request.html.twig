{% extends 'base.html.twig' %}
{% block content %}
<div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Reset your password</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

<div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">
         {% for flashError in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
    <fieldset>
        {{ form_row(requestForm.email, {'label':'Email : ', 'attr': {'class': 'inputBugForm'}}) }}
        <div>
            <small>
                Enter your email address and we we will send you a
                link to reset your password.
            </small>
        </div>
        <div class="col-lg-3"><button class="main-button buttonStyle">Send password reset email</button></div>
        <div class="col-lg-5"></div>
        <div class="col-lg-4"></div>
        
        </fieldset>
    {{ form_end(requestForm) }}

    </div>
      </div>
     </div>
    </div>
   </div>
  </div>
 </div>

{% endblock %}
