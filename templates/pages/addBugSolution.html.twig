{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Proposer un bug</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">
         <form id="search-form" name="sB" method="submit" role="search" action="#">
          <div class="row">
           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
