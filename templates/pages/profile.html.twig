{% extends "base.html.twig" %}
{% block content %}
    <div class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="top-text header-text">
                        <h2>Profil</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="contact-page">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <div class="row connectInscript">
                        {% if app.user.isVerified == false %}
                                <h1>Bienvenue {{ userData.email }}!</h1>

                                <p>Veuillez utiliser le lien reçu en email pour activer votre  compte.</p>
                                {% else %}
                            <div class="col-lg-4">
                                <img src="{{ asset('assets/images/' ~ userData.avatar) }}" alt="">
                                    <fieldset>
                                        <a href="{{ path('updateUser', {'id': userData.id}) }}"><button class="main-button buttonStyle">Modifier</button></a>
                                    </fieldset>
                            </div>
                            <div class="col-lg-8">
                                <p>Nom de compte : {{ userData.pseudonym }}</p>
                                <p>Adresse e-mail : {{ userData.email }}</p>
                                <p>Bloqué : {% if userData.locked == false %}Non {% else %} Oui {% endif %}</p>
                            </div>
                        {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}