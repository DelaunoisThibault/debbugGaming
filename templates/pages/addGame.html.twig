{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Ajouter un jeu</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">
         <form id="search-form" name="sB" method="submit" role="search" action="#">
          <div class="row">


           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
              <label for="gameTitle">Titre du Jeu:</label>
              <input type="text" class="inputBugForm" name="gameTitle" required>
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              <label for="gamePublicationYear">Année de publication:</label>
              <input type="number" class="inputBugForm" name="gamePublicationYear" required>
             </div>

             <div class="col-lg-12 bugInsideFormSpaces">
              <label for="gameEditor">Editeur du jeu:</label>
              <select class="searchFormPage inputBugForm" name="gameEditor" id="gameEditor" required>
               <option value="bethesda">Bethesda</option>
               <option value="ubisoft">Ubisoft</option>
               <option value="electronicArts">Electronic Arts</option>
               <option value ="cdRedProjekt">CD Red Projekt</option>
              </select>
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              <p class="textAddGame">Vous ne trouvez pas l'éditeur correspondant ? <a href="{{ path('editorCreationPage') }}">Ajoutez-le !</a></p>
             </div>

            </fieldset>
           </div>

           <div class="col-lg-4"></div>
           <div class="col-lg-4"></div>
           <div class="col-lg-4">
            <button><input type="submit" name="submitBugButton"></button>
           </div>

          </div>
         </form>
        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
{% endblock %}