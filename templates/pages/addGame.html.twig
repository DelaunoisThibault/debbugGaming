{% extends 'base.html.twig' %}
 {% block content %}
  <div class="page-heading">
   <div class="container">
    <div class="row">
     <div class="col-lg-4"></div>
     <div class="col-lg-8">
      <div class="top-text header-text">
       <h2>Ajouter un jeu</h2>
      </div>
     </div>
     <div class="col-lg-4"></div>
    </div>
   </div>
  </div>

  <div class="listing-page">
   <div class="container">
    <div class="row">
     <div class="col-lg-12">
      <div class="naccs">
       <div class="grid">
        <div class="row">

         {{ form_start(gameForm, {'method': 'POST', 'attr':{'id': 'search-form', 'name': 'sB'}}) }}
          <div class="row">

           <div class="col-lg-12 bugFormSpaces">
            <fieldset>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(gameForm.nameGame, {'label':'Nom du jeu :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(gameForm.yearOfPublication, {'label':'Année de publication :', 'attr': {'class': 'inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              {{ form_row(gameForm.idEditor, {'label':'Editeur du jeu :', 'attr': {'class': 'searchFormPage inputBugForm'}}) }}
             </div>
             <div class="col-lg-12 bugInsideFormSpaces">
              <p class="textAddGame">Vous ne trouvez pas l'éditeur correspondant ? <a href="{{ path('editorCreationPage') }}">Ajoutez-le !</a></p>
             </div>
            </fieldset>
           </div>

           <div class="col-lg-4"></div>
           <div class="col-lg-4"></div>
           <div class="col-lg-4">
            <button><input type="submit" name="submitBugButton"></button>
           </div>

          </div>
         {{ form_end(gameForm) }}
        </div>
       </div>
      </div>
     </div>
    </div>
   </div>
  </div>
{% endblock %}