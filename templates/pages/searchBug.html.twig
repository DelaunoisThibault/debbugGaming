{% extends "base.html.twig" %}
{% block content %}
    <div class="page-heading">
        <div class="container">
            <div class="row">
                <div class="col-lg-4"></div>
                <div class="col-lg-4">
                    <div class="top-text header-text">
                        <h2>Recherche Bugs</h2>
                    </div>
                </div>
                <div class="col-lg-4"></div>
            </div>
        </div>
    </div>



    <div class="category-post">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="naccs">
                        <div class="grid">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="menu">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <div class="thumb">
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <div class="top-content">
                                                    <div class="row">
                                                        <div class="col-lg-12">

                                                            <form id="search-form" name="gs" method="submit" role="search" action="#">
                                                                <div class="row searchFormPage searchFormSpaces">

                                                                    <div class="col-lg-9 align-self-center">
                                                                        <fieldset>
                                                                            <input type="address" name="address" class="searchText" placeholder="Entrer votre recherche ici..." autocomplete="on" required>
                                                                        </fieldset>
                                                                    </div>

                                                                    <div class="col-lg-3 arrangedBoxButtonSearchBug">
                                                                        <fieldset>
                                                                            <button class="main-button searchBugFormButton"><i class="fa fa-search"></i> Valider</button>
                                                                        </fieldset>
                                                                    </div>
                                                                </div>
                                                                <div class="row">
                                                                    <div class="col-lg-1">
                                                                        <h4>Filtrer :</h4>
                                                                    </div>
                                                                    <div class="col-lg-3 searchFormPage">
                                                                        <fieldset>
                                                                            <label for="severity">Sévérité :</label><br />
                                                                            <select class="searchFormPage" name="severity" id="severity">
                                                                                <option value="insignificant">Insignifiant</option>
                                                                                <option value="small">Faible</option>
                                                                                <option value="moderate">Modéré</option>
                                                                                <option value ="strong">Fort</option>
                                                                                <option value ="deadly/heavy">Jeux condamné/lourdement impacté</option>
                                                                            </select>
                                                                        </fieldset>
                                                                    </div>
                                                                    <div class="col-lg-3 searchFormPage">
                                                                        <fieldset>
                                                                            <label for="frequency">Fréquence :</label><br />
                                                                            <select class="searchFormPage" name="frequency" id="frequency">
                                                                                <option value="exceptionnal">Exceptionnel</option>
                                                                                <option value="rare">Rare</option>
                                                                                <option value="sometimes">Peu courant</option>
                                                                                <option value ="often">Assez régulier</option>
                                                                                <option value ="regulary">Fréquent</option>
                                                                                <option value ="always">Systématique</option>
                                                                            </select>
                                                                        </fieldset>
                                                                    </div>
                                                                    <div class="col-lg-3 searchFormPage">
                                                                        <fieldset>
                                                                            <label for="gameBug">Jeu :</label><br />
                                                                            <select class="searchFormPage" name="gameBug" id="gameBug">
                                                                                <option value="skyrim">Skyrim</option>
                                                                                <option value="AssassinsCreed3">Assassins Creed 3</option>
                                                                                <option value="Fifa21">Fifa 2021</option>
                                                                            </select>
                                                                        </fieldset>
                                                                    </div>
                                                                    <div class="col-lg-2">
                                                                        <input type="checkbox" id="solved" name="solved">
                                                                        <label for="solved">Résolu ?</label>
                                                                    </div>
                                                                </div>
                                                            </form>

                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="recent-listing recentListingDenied">
                                        <div class="col-lg-12">
                                            <div class="general-info">
                                                <div class="item">
                                                    <div class="row">
                                                        {% for listBugs in listBugs %}
                                                            <div class="col-lg-4">
                                                                <div class="listing-item">
                                                                    <div class="left-image">
                                                                        <a href="{{ path('bugPage', {'id': listBugs.id}) }}"><img src="{{ asset('assets/images/' ~listBugs.descriptionImgBug ) }}" alt=""></a>
                                                                    </div>
                                                                    <div class="right-content align-self-center">
                                                                        <a href="{{ path('bugPage', {'id': listBugs.id}) }}">
                                                                            <h4>{{ listBugs.titleBug }}</h4>
                                                                        </a>
                                                                        <p>{{ listBugs.smallTextBug }}</p>
                                                                        <h6>{{ listBugs.subtitleBug }}</h6>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% endfor %}


                                                    </div>
                                                </div>

                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <div class="col-lg-4"></div>
                                <div class="col-lg-4">
                                    <div class="nav-links">
                                        {% for i in 1..(listBugs.totalItemCount/listBugs.itemNumberPerPage + 1) | round(0, 'floor') %}
                                            <a class="page-numbers {{   i == app.request.get('page') ? 'current' : '' }}"
                                               href="{{ url(app.request.get('_route'), app.request.query.all() | merge({page: i}) ) }}">{{ i }}</a>
                                        {% endfor %}
                                    </div>
                                </div>
                                <div class="col-lg-4"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}